<h1>Listing activities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Enjoy score</th>
      <th>Complete score</th>
      <th>Pass counter</th>
      <th>Fail counter</th>
      <th>Weight</th>
      <th>Max level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.level %></td>
        <td><%= activity.enjoy_score %></td>
        <td><%= activity.complete_score %></td>
        <td><%= activity.pass_counter %></td>
        <td><%= activity.fail_counter %></td>
        <td><%= activity.weight %></td>
        <td><%= activity.max_level %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

