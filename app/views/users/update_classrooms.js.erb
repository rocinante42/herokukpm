$('.dropdown.select.classroom > *').remove(':not(input)');
$('.dropdown.select.classroom').append("<%= j render 'dropdown', object: @classroom, options: @classrooms %>");
$('.teachersList .text-main').html("<%= raw @classroom_teachers.present? ? @classroom_teachers.map(&:full_name).join('<br><br>') : '' %>")
<% user = User.new(role: @role) %>
$('.form-group.school').toggleClass('hidden', <%= !user.can_have? :school %>);
$('.form-group.classroom').toggleClass('hidden', <%= !user.can_have? :classroom %>);
$('.teachersList').toggleClass('hidden', <%= !(user.can_have?(:classroom) && @classroom_teachers.present?) %>);

initUserDropdownSelect();
