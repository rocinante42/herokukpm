<%= render 'shared/section_title', title: 'Bubble Categories' %>
<div class="container kmSection">
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @grouped_bubble_categories.each do |group_name, bubble_categories| %>
          <tr>
            <td colspan="2"><%= group_name %></td>
          </tr>
          <% bubble_categories.each do |bubble_category| %>
            <tr>
              <td><%= bubble_category.name %></td>
              <td class="actions minimal">
                <%= link_to 'View', bubble_category, class: 'btn btn-info btn-simple btn-narrow' %>
                <%= link_to 'Edit', edit_bubble_category_path(bubble_category), class: 'btn btn-warning btn-simple btn-narrow' %>
                <%= link_to 'Delete', bubble_category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-simple btn-narrow' %>
              </td>
            </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row actions text-right">
    <div class="col-md-12">
      <%= link_to new_bubble_category_path, class: 'btn btn-warning btn-simple btn-large' do %>
        <i class="fa fa-plus"></i>
        <span>New Bubble Category</span>
      <% end %>
    </div>
  </div>
</div>
