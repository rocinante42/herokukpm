<div id="kmLoginPage">
  <div class="tab-content container">
    <div class="tab-pane fade in active" id="login_form">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class:'form-horizontal resetForm', method: :put}) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div class="row">
          <%= devise_error_messages! %>
          <div class="col-md-9 col-md-offset-1">
            <div class="form-group">
              <%= f.label :password, "New password", class: 'col-sm-6 control-label' %>
              <div class="col-sm-6">
                <%= f.password_field :password, class: 'form-control', autofocus: true, autocomplete: "off" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm new password", class: 'col-sm-6 control-label' %>
              <div class="col-sm-6">
                <%= f.password_field :password_confirmation, class: 'form-control', autofocus: true, autocomplete: "off" %>
              </div>
            </div>
          </div>
        </div>
        <div class="row text-right">
          <div class="col-md-7 col-md-offset-3">
            <%= f.submit "Change my password", class: 'btn btn-info btn-large btn-wide btn-simple' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
