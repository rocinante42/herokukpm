<h1>Listing Bubble Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bubble_groups.each do |bubble_group| %>
      <tr>
        <td><%= bubble_group.name %></td>
        <td><%= bubble_group.description %></td>
        <td><%= link_to 'Show', bubble_group %></td>
        <td><%= link_to 'Edit', edit_bubble_group_path(bubble_group) %></td>
        <td><%= link_to 'Destroy', bubble_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

