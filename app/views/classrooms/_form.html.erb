<%= form_for(@classroom) do |f| %>
  <% if @classroom.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@classroom.errors.count, "error") %> prohibited this classroom from being saved:</h2>

      <ul>
      <% @classroom.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :school %><br>
    <%= f.collection_select :school_id, School.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label "Teacher" %><br>
    <%if current_user.admin? %>
    <%= f.collection_select :user_id, User.teachers, :id, :full_name, include_blank: true %>
    <%else%>
    <%= f.collection_select :user_id, User.teachers, :id, :full_name, { selected: current_user.id } %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label "Classroom type" %><br>
    <%= f.collection_select :classroom_type_id, ClassroomType.all, :id, :type_name%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
