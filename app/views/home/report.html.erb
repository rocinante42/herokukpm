<div class="container-fluid kmSection">
  <div class="row kmSectionTitle">
    <div class="container">
      <div class="pull-left">
        <h4>Reports for Danielle Way</h4>
      </div>
      <div class="pull-right">
        <%= link_to 'javascript:', class: 'btn btn-info btn-large btn-simple' do %>
          <i class="fa fa-print"></i>
          <span> Print Report as PDF</span>
        <% end %>
        <%= link_to 'Back to Classroom','javascript:', class: 'btn btn-warning btn-large btn-simple' %>
      </div>
    </div>
  </div>
</div>

<div class="container kmSection">
  <div class="row">
    <div class="col-md-4">
      <h4>Information</h4>
      <div class="grid grid-pad">
        <div class="grid-row">
          <div class="grid-col">
            <div class="media">
              <div class="media-left">
                <%= image_tag 'student_avatar_medium.jpg', class: 'media-object' %>
              </div>
              <div class="media-body media-middle">
                <h3 class="text-main">Danielle Way</h3>
              </div>
            </div>
          </div>
        </div>

        <div class="grid-row">
          <div class="grid-col">
            <table class="table solid fit continual font-large">
              <tbody>
              <% data = {'Login' => 'ID12345678', 'Classroom' => 'Classroom 1', 'First Name' => 'Danielle', 'Last Name' => 'Way', 'Gender' => 'Male', 'Age' => '6 years', 'Primary Language' => 'English'} %>
              <% data.each do |k, v| %>
                <tr>
                  <td>
                    <span><%= k %></span>
                  </td>
                  <td class="text-right">
                    <span class="text-main"><%= v %></span>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>

      </div>
    </div>

    <div class="col-md-8">
      <h4>Reports</h4>
      <table class="table">
        <thead>
        <tr class="text-center">
          <th>Categories Type</th>
          <th class="text-center">Passed</th>
          <th class="text-center">Active</th>
          <th class="text-center">Total</th>
        </tr>
        </thead>

        <tbody class="text-main row-high v-middle font-large">
        <% data = ['Counting and Cardinality to 20', 'Base 10', 'Number Line Model', 'Count All', 'Count On', 'Compare'] %>
        <% data.each do |item| %>
          <tr>
            <td><%= item %></td>
            <td class="text-center"><%= rand(1..5) %></td>
            <td class="text-center"><%= rand(1..5) %></td>
            <td class="text-center"><%= rand(1..5) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>