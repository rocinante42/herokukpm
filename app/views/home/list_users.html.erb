<div class="container-fluid kmSection">
  <div class="row kmSectionTitle">
    <div class="container">
      <div class="pull-left">
        <h4>View Users</h4>
      </div>
    </div>
  </div>
</div>
<div class="container kmSection">
  <div class="row">
    <table class="table fit">
      <thead>
      <tr class="no-border-top">
        <th class="text-center">Avatar</th>
        <th class="text-center">Type</th>
        <th class="text-center">User Name</th>
        <th class="text-center">E-Mail</th>
        <th class="text-center">Last Login</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% 4.times do %>
        <tr class="text-center v-middle">
          <td class="minimal">
            <%= link_to 'javascript:' do %>
              <%= image_tag 'teacher_avatar.png' %>
            <% end %>
          </td>

          <td>
            <span class="text-main font-large">Admin</span>
          </td>
          <td>
            <span class="text-main font-large">Robert Tanouye</span>
          </td>
          <td>
            <span class="text-main font-large">robertmtanoue@gmail.com</span>
          </td>
          <td>
            <span class="text-main font-large">01-09-2015 17:53</span>
          </td>
          <td class="actions minimal">
            <%= link_to 'View', 'javascript:', class: 'btn btn-info btn-simple btn-narrow' %>
            <%= link_to 'Edit', 'javascript:', class: 'btn btn-warning btn-simple btn-narrow' %>
            <%= link_to 'Delete', 'javascript:', class: 'btn btn-danger btn-simple btn-narrow' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="row actions text-right">
    <%= link_to 'javascript:', class: 'btn btn-warning btn-simple btn-large btn-wide' do %>
      <i class="fa fa-plus"></i>
      <span>Add New User</span>
    <% end %>
  </div>
</div>
