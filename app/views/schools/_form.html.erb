<%= render 'shared/section_title', title: @school.new_record? ? 'Create New School' : 'Editing School' %>

<div class="container kmSection">
  <%= form_for(@school, html: {class: 'form-horizontal form-classic form-vpad'}) do |f| %>
    <%= render 'shared/error_messages', object: @school %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
          <%= f.label :name, "Name", class: "col-sm-4 control-label text-main" %>
          <div class="col-sm-8">
            <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
          </div>
        </div>
      </div>
    </div>

    <div class="row text-center actions">
      <%= link_to 'Back', schools_path, class: 'btn btn-danger btn-large btn-wide btn-simple' %>
      <% if @school.new_record? %>
        <%= f.submit 'Create School', class: 'btn btn-info btn-large btn-wide btn-simple' %>
      <% else %>
        <%= link_to 'Show', @school, class: 'btn btn-warning btn-large btn-wide btn-simple' %>
        <%= f.submit 'Update School', class: 'btn btn-info btn-large btn-wide btn-simple' %>
      <% end %>
    </div>
  <% end %>
</div>
