<h1>Listing edges</h1>

<table>
  <thead>
    <tr>
      <th>Source</th>
      <th>Destination</th>
      <th>Poset</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @edges.each do |edge| %>
      <tr>
        <td><%= link_to edge.source.name, edge.source %></td>
        <td><%= link_to edge.destination.name, edge.destination %></td>
        <td><%= link_to edge.poset.name, edge.poset %></td>
        <td><%= link_to 'Show', edge %></td>
        <td><%= link_to 'Edit', edit_edge_path(edge) %></td>
        <td><%= link_to 'Destroy', edge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

