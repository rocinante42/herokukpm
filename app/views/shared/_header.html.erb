<% data = ['East High School', 'Denver School of the Arts', 'South High School', 'Green School'] %>

<div class="container-fluid kmHeader">
  <div class="row">
    <div class="container">
      <% classname = user_signed_in? ? 'col-md-5' : 'col-md-12' %>
      <div class="<%= classname %> text-center font-brand title">
        <h1>Kids Play Math</h1>
        <h1>Teachers Room</h1>
      </div>
      <% if user_signed_in? %>
        <div class="col-md-7">
          <div class="media">
            <div class="media-body media-left media-middle text-right">
              <h1>Welcome, <%= current_user.first_name %></h1>
              <% if current_user.teacher? && action_name != "choose_school" %>
                <div class="font-large">
                  <span>School:</span>
                  <div class="dropdown select">
                    <a href="javascript:;" class="dropdown-toggle nowrap" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                      <span class="value"><%= current_school.name %></span>
                      <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                      <% current_user.schools.each do |school| %>
                        <li><%= link_to school.name, set_school_path(school_id: school.id) %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              <% elsif current_user.parent? && defined? @kid %>
                <div class="font-large">
                  <span>Kid:</span>
                  <div class="dropdown select">
                    <a href="javascript:;" class="dropdown-toggle nowrap" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                      <span class="value"><%= @kid.full_name %></span>
                      <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                      <% current_user.kids.each do |kid| %>
                        <li><%= link_to kid.full_name, reports_kid_path(kid) %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="media-left media-right media-middle">
              <%= image_tag 'avatar.png', class: 'img-responisve img-circle' %>
            </div>
            <div class="media-right media-middle">
              <div class="dropdown">
                <a href="javascript:;" class="dropdown-toggle nowrap" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                  <i class="fa fa-cog fa-2x"></i>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu dropdown-menu-right">
                  <li><%= link_to "Edit profile", edit_user_registration_path %></li>
                  <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
